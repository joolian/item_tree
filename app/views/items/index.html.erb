		<div class="centered">Search by name</div>
		<div class="centered"><input type="text", id="search"></div>
		<div class="centered"><%= link_to fa_stacked_icon('times inverse lg', base: 'circle'), items_path, title: 'Clear search' %></div>
	</div>
	<div>
	<%= link_to 'Create first item', new_item_path if @no_item_records %>
