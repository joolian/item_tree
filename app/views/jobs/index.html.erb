<div class='content'>
	<p id="notice"><%= notice %></p>

	<h1>Listing Jobs</h1>

	<table>
	  <thead>
	    <tr>
	      <th>Description</th>
	      <th>Done</th>
	      <th>Item</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @jobs.each do |job| %>
	      <tr>
	        <td><%= job.description %></td>
	        <td><%= job.done %></td>
	        <td><%= job.item_id %></td>
	        <td><%= link_to 'Show', job %></td>
	        <td><%= link_to 'Edit', edit_job_path(job) %></td>
	        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>

	<div><%= link_to 'New Job', new_job_path %></div>
	<div><%= link_to 'Finder', items_path%></div>
</div>